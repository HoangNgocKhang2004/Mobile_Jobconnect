@model HuitWorks.AdminWeb.Models.ViewModels.JobAppViewModel
@{
    ViewData["Title"] = "Chỉnh sửa đơn ứng tuyển";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Applications">Danh sách đơn ứng tuyển</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa đơn</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary bg-opacity-75 text-white">
            <h4 class="card-title mb-0">
                <i class="bi bi-pencil-square me-2"></i>Chỉnh sửa đơn ứng tuyển
            </h4>
        </div>

        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                <!-- Hidden fields -->
                <input type="hidden" asp-for="IdUser" />
                <input type="hidden" asp-for="IdJobPost" />
                <input type="hidden" asp-for="CandidateEmail" />
                <input type="hidden" asp-for="CandidateName" />
                <input type="hidden" asp-for="CandidatePhone" />
                <input type="hidden" asp-for="CompanyName" />
                <input type="hidden" asp-for="JobTitle" />
                <input type="hidden" asp-for="JobDescription" />
                <input type="hidden" asp-for="CoverLetter" />
                <input type="hidden" asp-for="CvFileUrl" />

                <!-- Thông tin đơn ứng tuyển -->
                <div class="card mb-4 bg-light">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 text-primary">Thông tin đơn ứng tuyển</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-medium">Tên ứng viên</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-white">
                                            <i class="bi bi-person text-primary"></i>
                                        </span>
                                        <input class="form-control" value="@Model.CandidateName" readonly />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-medium">Email</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-white">
                                            <i class="bi bi-envelope text-primary"></i>
                                        </span>
                                        <input class="form-control" value="@Model.CandidateEmail" readonly />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-medium">Vị trí ứng tuyển</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white">
                                    <i class="bi bi-briefcase text-primary"></i>
                                </span>
                                <input class="form-control" value="@Model.JobTitle" readonly />
                            </div>
                        </div>

                        <div class="mb-2">
                            <label class="form-label fw-medium">Công ty</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white">
                                    <i class="bi bi-building text-primary"></i>
                                </span>
                                <input class="form-control" value="@Model.CompanyName" readonly />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cập nhật trạng thái -->
                <div class="card mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0 text-primary">Cập nhật trạng thái</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="ApplicationStatus" class="form-label fw-medium">Trạng thái đơn</label>
                            <select asp-for="ApplicationStatus" class="form-select form-select-lg">
                                <option value="pending">Chưa xem xét</option>
                                <option value="viewed">Đã xem</option>
                                <option value="interview">Đã mời phỏng vấn</option>
                                <option value="accepted">Đã nhận</option>
                                <option value="rejected">Từ chối</option>
                            </select>
                            <small class="form-text text-muted mt-1">
                                Trạng thái hiện tại của đơn ứng tuyển
                            </small>
                        </div>

                        @* <div class="mb-3"> *@
                        @*     <label asp-for="Note" class="form-label fw-medium">Ghi chú</label> *@
                        @*     <textarea asp-for="Note" class="form-control" rows="4" placeholder="Nhập ghi chú về đơn ứng tuyển này..."></textarea> *@
                        @* </div> *@

                        <!-- Thông tin khác có thể thêm vào -->
                        @if (!string.IsNullOrEmpty(Model.CvFileUrl))
                        {
                            <div class="d-flex align-items-center mt-3 bg-light p-3 rounded">
                                <i class="bi bi-file-earmark-pdf text-danger fs-4 me-2"></i>
                                <div>
                                    <p class="mb-0 fw-medium">CV của ứng viên</p>
                                    <p class="mb-0">
                                        <a href="@Model.CvFileUrl" target="_blank" class="text-decoration-none">
                                            <i class="bi bi-eye me-1"></i>Xem CV
                                        </a>
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Nút submit -->
                <div class="d-flex justify-content-between">
                    <a asp-action="Applications" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-arrow-left me-1"></i>Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-check-circle me-1"></i>Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Đảm bảo thêm Bootstrap Icons nếu chưa có trong layout của bạn -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.1/font/bootstrap-icons.min.css">