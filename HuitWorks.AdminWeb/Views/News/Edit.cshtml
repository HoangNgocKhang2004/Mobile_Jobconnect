@model News
@{
    ViewData["Title"] = "Chỉnh sửa tin tức";
}
<h2 class="mb-4">@ViewData["Title"]</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="idNews" />
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Summary" class="form-label"></label>
        <input asp-for="Summary" class="form-control" required />
        <span asp-validation-for="Summary" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" class="form-control" rows="8"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label"></label>
        <input asp-for="ImageUrl" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="img-thumbnail mt-2" style="max-width:120px;">
        }
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PublishDate" class="form-label"></label>
        <input asp-for="PublishDate" class="form-control" type="datetime-local"
               value="@Model.PublishDate.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="PublishDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Author" class="form-label"></label>
        <input asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CategoryName" class="form-label"></label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="TargetAudience" class="form-label"></label>
        <input asp-for="TargetAudience" class="form-control" />
        <span asp-validation-for="TargetAudience" class="text-danger"></span>
    </div>
    <div class="mb-3 form-check">
        <input asp-for="IsPublished" class="form-check-input" type="checkbox" />
        <label asp-for="IsPublished" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-success">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
