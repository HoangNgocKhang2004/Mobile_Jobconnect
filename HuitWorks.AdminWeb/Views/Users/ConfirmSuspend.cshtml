@model HuitWorks.AdminWeb.Models.ViewModels.UserVM

@{
    ViewData["Title"] = "Xác nhận khoá tài khoản";
}

<div class="container py-5">
    <h2>Xác nhận khoá tài khoản</h2>
    <div class="card p-4 my-4">
        <dl class="row">
            <dt class="col-sm-3">ID người dùng</dt>
            <dd class="col-sm-9">@Model.IdUser</dd>

            <dt class="col-sm-3">Họ tên</dt>
            <dd class="col-sm-9">@Model.UserName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Trạng thái hiện tại</dt>
            <dd class="col-sm-9">@Model.AccountStatus</dd>
        </dl>
        <form asp-action="Suspend" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.IdUser" />
            <input type="hidden" name="id" value="@Model.Address" />
            <button type="submit" class="btn btn-danger">Xác nhận khoá</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
        </form>
    </div>
</div>
