@model HuitWorks.RecruiterWeb.Models.ViewModel.ForgotPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quên mật khẩu</title>
    <link href="~/css/auth/registerrecruiter.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }

        .main-container {
            display: grid;
            grid-template-columns: 2fr 1fr;
            min-height: 100vh;
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0 25px 50px rgba(9, 65, 116, 0.1);
            overflow: hidden;
            margin: 20px;
        }

        .form-section {
            padding: 40px;
            overflow-y: auto;
            max-height: 100vh;
        }

        .form-header {
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #e5f0fd;
        }

            .form-header h1 {
                color: #094174;
                font-size: 28px;
                font-weight: 600;
                margin-bottom: 8px;
            }

            .form-header p {
                color: #6b7280;
                font-size: 16px;
            }

        .alert {
            padding: 15px 20px;
            border-radius: 8px;
            margin-bottom: 25px;
            border-left: 4px solid;
            font-weight: 500;
        }

        .alert-danger {
            background-color: #fef2f2;
            color: #dc2626;
            border-left-color: #dc2626;
        }

        .alert-success {
            background-color: #f0fdf4;
            color: #16a34a;
            border-left-color: #16a34a;
        }

        .form-group {
            margin-bottom: 15px;
            transition: transform 0.2s ease;
        }

            .form-group:hover {
                transform: translateY(-1px);
            }

            .form-group label {
                display: block;
                margin-bottom: 6px;
                font-weight: 500;
                color: #374151;
                font-size: 14px;
            }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.3s ease;
            background-color: #fafafa;
        }

            .form-control:focus {
                outline: none;
                border-color: #094174;
                background-color: #ffffff;
                box-shadow: 0 0 0 3px rgba(9, 65, 116, 0.1);
            }

            .form-control:hover {
                border-color: #d1d5db;
                background-color: #ffffff;
            }

        .text-danger {
            color: #dc2626;
            font-size: 12px;
            margin-top: 4px;
            display: block;
        }

        .btn-primary1 {
            background: linear-gradient(135deg, #094174 0%, #0f5896 100%);
            color: white;
            border: none;
            padding: 15px 40px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(9, 65, 116, 0.3);
            width: 100%;
        }

            .btn-primary1:hover {
                background: linear-gradient(135deg, #0f5896 0%, #094174 100%);
            }

        .submit-section {
            text-align: center;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #e5e7eb;
        }

        .login-link {
            margin-top: 12px;
            text-align: center;
            font-size: 14px;
            color: #6b7280;
        }

            .login-link span {
                margin-right: 4px;
            }

            .login-link a {
                color: #094174;
                font-weight: 600;
                text-decoration: none;
            }

                .login-link a:hover {
                    text-decoration: underline;
                }

        .form-section::-webkit-scrollbar {
            width: 6px;
        }

        .form-section::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 3px;
        }

        .form-section::-webkit-scrollbar-thumb {
            background: #094174;
            border-radius: 3px;
        }

            .form-section::-webkit-scrollbar-thumb:hover {
                background: #0f5896;
            }

        .image-section {
            position: relative;
            background-image: url('/images/panel2.png');
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .panel-content {
            position: relative;
            text-align: center;
            color: #ffffff;
            padding: 20px;
        }

            .panel-content h2 {
                font-size: 32px;
                font-weight: 600;
                margin-bottom: 20px;
            }

            .panel-content p {
                font-size: 16px;
                line-height: 1.5;
                margin-bottom: 20px;
            }

            .panel-content img {
                max-width: 200px;
                margin-top: 20px;
            }
    </style>
</head>

<body>
    <div class="main-container">
        <!-- Bên trái: Form Quên mật khẩu -->
        <div class="form-section">
            <div class="form-header">
                <h1>Quên mật khẩu</h1>
                <p>Nhập email để yêu cầu Admin cấp lại mật khẩu</p>
            </div>

            @* Hiển thị lỗi server-side ModelState *@
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" style="display:block">
                    <ul>
                        @foreach (var entry in ViewData.ModelState.Values)
                        {
                            foreach (var error in entry.Errors)
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        }
                    </ul>
                </div>
            }

            @* Hiển thị thông báo thành công nếu có *@
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success" style="display:block">
                    @ViewBag.SuccessMessage
                </div>
            }

            <form asp-action="ForgotPassword" method="post" id="forgotForm">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label for="Email">Email của bạn *</label>
                    <input asp-for="Email"
                           class="form-control"
                           placeholder="vd. example@domain.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="submit-section">
                    <button type="submit" class="btn-primary1">Xác nhận</button>
                    <div class="login-link">
                        <span>Đã có tài khoản?</span>
                        <a href="/Auth/Login">Đăng nhập ngay</a>
                    </div>
                </div>
            </form>
        </div>

        <!-- Bên phải: Panel / Image -->
        <div class="image-section">
        </div>
    </div>

    @* Nếu bạn cần jQuery Validation cho client-side, để dưới footer *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
