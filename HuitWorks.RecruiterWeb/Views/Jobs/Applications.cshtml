        /* === RESET BODY === */
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #212529;
            line-height: 1.6;
        }

        /* === APPLICANT CARD === */
        .applicant-card {
            transition: all 0.2s ease;
            border-left: 5px solid transparent;
        }

            .applicant-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 18px rgba(0, 0, 0, 0.1);
            }

            .applicant-card.status-pending {
                border-left-color: #ffc107;
            }

            .applicant-card.status-approved {
                border-left-color: #198754;
            }

            .applicant-card.status-rejected {
                border-left-color: #dc3545;
            }

        /* === BUTTONS === */
        .btn {
            transition: all 0.2s;
        }

            .btn:hover {
                transform: translateY(-2px);
            }

        /* === MODAL-CONTENT === */
        .modal-content {
            border-radius: 10px;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #e9ecef;
        }

        .modal-title {
            margin: 0;
            font-size: 1.25rem;
            font-weight: 600;
            color: #094174;
        }

        .btn-close {
            color: #777;
            opacity: 1;
        }

        .modal-body {
            padding: 1.5rem;
            overflow-y: auto;
            max-height: calc(100vh - 200px);
        }

        .modal-footer {
            display: flex;
            justify-content: flex-end;
            padding: 1rem 1.5rem;
            border-top: 1px solid #e9ecef;
            gap: 10px;
        }

        /* === CANDIDATE PROFILE === */
        .candidate-profile {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }

        .candidate-avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-color: #e6f0fa;
            overflow: hidden;
            flex-shrink: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 2rem;
            font-weight: bold;
            color: #094174;
        }

            .candidate-avatar img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .candidate-info {
            flex: 1;
        }

        .candidate-name {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 5px;
            color: #094174;
        }

        .candidate-role {
            font-size: 1.1rem;
            color: #444;
            margin-bottom: 10px;
        }

        .candidate-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            margin-bottom: 10px;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 5px;
            color: #555;
            font-size: 0.9rem;
        }

        /* === PROFILE SECTION === */
        .profile-section {
            margin-bottom: 20px;
        }

        .section-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 10px;
            color: #333;
            border-bottom: 1px solid #e9ecef;
            padding-bottom: 8px;
        }

        .section-content {
            color: #444;
            line-height: 1.5;
        }

        /* === SKILL TAGS === */
        .skill-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }

        .skill-tag {
            background-color: #e6f0fa;
            color: #094174;
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 0.85rem;
        }

        /* === TIMELINE === */
        .timeline {
            margin-left: 10px;
            padding-left: 20px;
            border-left: 2px solid #ddd;
        }

        .timeline-item {
            position: relative;
            margin-bottom: 20px;
        }

            .timeline-item:before {
                content: '';
                position: absolute;
                left: -26px;
                top: 0;
                width: 10px;
                height: 10px;
                border-radius: 50%;
                background-color: #094174;
            }

        .timeline-date {
            font-size: 0.85rem;
            color: #777;
            margin-bottom: 5px;
        }

        .timeline-title {
            font-weight: 600;
            margin-bottom: 5px;
            color: #333;
        }

        .timeline-content {
            color: #555;
            font-size: 0.9rem;
        }

