    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Dữ liệu ứng viên mẫu - trong thực tế, bạn sẽ lấy từ database
            const applicantsData = {
                '1001': {
                    name: 'Nguyễn Văn A',
                    position: 'Chuyên viên Marketing',
                    department: 'Phòng Marketing',
                    email: 'nguyenvana@gmail.com',
                    phone: '0987 654 321',
                    applicationDate: '20/04/2025',
                    status: 'pending',
                    avatar: 'https://randomuser.me/api/portraits/men/32.jpg',
                    location: 'Hà Nội'
                },
                '1002': {
                    name: 'Trần Thị B',
                    position: 'Kỹ sư phần mềm',
                    department: 'Phòng Công nghệ',
                    email: 'tranthib@gmail.com',
                    phone: '0912 345 678',
                    applicationDate: '19/04/2025',
                    status: 'approved',
                    avatar: 'https://randomuser.me/api/portraits/women/45.jpg',
                    location: 'Hồ Chí Minh'
                },
                // Thêm dữ liệu cho các ứng viên khác ở đây...
            };

            // Lấy reference tới custom modal
            const customModal = document.getElementById('customModal');
            const closeButtons = document.querySelectorAll('.custom-close-btn, .close-modal-btn');

            // Hàm mở modal
            function openModal() {
                customModal.classList.add('show');
                document.body.style.overflow = 'hidden'; // Ngăn scroll của body
            }

            // Hàm đóng modal
            function closeModal() {
                customModal.classList.remove('show');
                document.body.style.overflow = ''; // Khôi phục scroll của body
            }

            // Thêm event listeners cho nút đóng
            closeButtons.forEach(button => {
                button.addEventListener('click', closeModal);
            });

            // Đóng modal khi click bên ngoài content
            customModal.addEventListener('click', function(e) {
                if (e.target === customModal) {
                    closeModal();
                }
            });

            // Custom dropdown
            const dropdownToggle = document.querySelector('.dropdown-toggle-custom');
            const dropdownMenu = document.querySelector('.custom-dropdown-menu');

            dropdownToggle.addEventListener('click', function(e) {
                e.stopPropagation();
                dropdownMenu.classList.toggle('show');
            });

            // Đóng dropdown khi click bên ngoài
            document.addEventListener('click', function() {
                dropdownMenu.classList.remove('show');
            });

            // Ngăn đóng dropdown khi click vào menu
            dropdownMenu.addEventListener('click', function(e) {
                e.stopPropagation();
            });

            // Bắt sự kiện click từ các nút xem chi tiết
            document.querySelectorAll('.view-candidate').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();

                    const applicantId = this.getAttribute('data-id');
                    const applicantData = applicantsData[applicantId] || {};

                    // Nếu không có dữ liệu chi tiết, lấy từ card hiện tại
                    if (Object.keys(applicantData).length === 0) {
                        const card = this.closest('.applicant-card');
                        const name = card.querySelector('h5')?.textContent || 'Không có tên';
                        const position = card.querySelector('.text-primary')?.textContent || 'Không có vị trí';
                        const email = card.querySelector('.fa-envelope')?.nextElementSibling?.textContent || '';
                        const phone = card.querySelector('.fa-phone')?.nextElementSibling?.textContent || '';
                        const appDate = card.querySelector('.fa-calendar')?.nextElementSibling?.textContent || '';
                        const avatar = card.querySelector('img')?.src || '';
                        const statusBadge = card.querySelector('.badge')?.textContent || 'Chờ duyệt';

                        updateModalContent({
                            name: name,
                            position: position,
                            email: email,
                            phone: phone,
                            applicationDate: appDate.replace('Ngày ứng tuyển: ', ''),
                            avatar: avatar,
                            status: getStatusFromBadge(statusBadge),
                            location: 'Việt Nam'
                        });
                    } else {
                        // Sử dụng dữ liệu từ object
                        updateModalContent(applicantData);
                    }

                    // Hiển thị modal
                    openModal();
                });
            });

            // Hàm cập nhật nội dung modal
            function updateModalContent(data) {
                // Cập nhật tiêu đề
                document.getElementById('applicantModalTitle').textContent = `Chi tiết ứng viên - ${data.name}`;

                // Cập nhật thông tin cơ bản
                document.getElementById('applicantName').textContent = data.name;
                document.getElementById('applicantPosition').textContent = `Ứng tuyển: ${data.position}`;

                // Cập nhật thông tin liên hệ
                document.querySelector('#applicantEmail span').textContent = data.email;
                document.querySelector('#applicantPhone span').textContent = data.phone;
                document.querySelector('#applicantLocation span').textContent = data.location || 'Việt Nam';

                // Cập nhật ngày ứng tuyển
                document.getElementById('applicationDate').textContent = data.applicationDate;

                // Cập nhật avatar
                const avatarElement = document.getElementById('applicantAvatar');
                if (data.avatar) {
                    avatarElement.innerHTML = `<img src="${data.avatar}" alt="${data.name}">`;
                } else {
                    // Tạo avatar từ chữ cái đầu
                    const initial = data.name.charAt(0);
                    avatarElement.innerHTML = `<span>${initial}</span>`;
                }

                // Cập nhật trạng thái
                updateStatusBadge(data.status);
            }

            // Hàm cập nhật badge trạng thái
            function updateStatusBadge(status) {
                const statusElement = document.getElementById('applicantStatus');

                // Xóa tất cả các class status hiện tại
                statusElement.classList.remove('status-new', 'status-interview', 'status-hired', 'status-rejected');

                // Thêm class và cập nhật nội dung phù hợp
                switch(status) {
                    case 'pending':
                        statusElement.classList.add('status-new');
                        statusElement.textContent = 'Chờ duyệt';
                        break;
                    case 'approved':
                        statusElement.classList.add('status-hired');
                        statusElement.textContent = 'Đã duyệt';
                        break;
                    case 'rejected':
                        statusElement.classList.add('status-rejected');
                        statusElement.textContent = 'Từ chối';
                        break;
                    case 'interview':
                        statusElement.classList.add('status-interview');
                        statusElement.textContent = 'Phỏng vấn';
                        break;
                    default:
                        statusElement.classList.add('status-new');
                        statusElement.textContent = 'Mới';
                }
            }

            // Hàm chuyển đổi text trạng thái thành code
            function getStatusFromBadge(badgeText) {
                switch(badgeText.trim()) {
                    case 'Chờ duyệt': return 'pending';
                    case 'Đã duyệt': return 'approved';
                    case 'Từ chối': return 'rejected';
                    case 'Phỏng vấn': return 'interview';
                    default: return 'pending';
                }
            }

            // Xử lý nút Duyệt hồ sơ
            document.getElementById('btnApprove').addEventListener('click', function() {
                alert('Xác nhận duyệt hồ sơ ứng viên này?');
                // Thực hiện logic duyệt hồ sơ ở đây
                updateStatusBadge('approved');
            });
        });
    </script>
