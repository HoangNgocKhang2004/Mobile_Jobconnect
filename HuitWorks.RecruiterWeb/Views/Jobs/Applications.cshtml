            .custom-modal.show {
                display: block;
            }

        .custom-modal-dialog {
            position: relative;
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            pointer-events: none;
        }

        .custom-modal-content {
            position: relative;
            display: flex;
            flex-direction: column;
            background-color: #fff;
